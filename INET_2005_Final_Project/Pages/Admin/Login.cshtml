@page
@model INET_2005_Final_Project.Pages.Admin.LoginModel
@{
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.InputUsername" class="control-label">Username</label>
                <input asp-for="@Model.InputUsername" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="@Model.InputPassword" class="control-label">Password</label>
                <input asp-for="@Model.InputPassword" class="form-control" type="password" />
            </div>

            <div class="mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
