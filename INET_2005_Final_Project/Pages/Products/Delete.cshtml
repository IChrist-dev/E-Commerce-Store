@page
@model INET_2005_Final_Project.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";

    string imagePath = "/photos/" + Model.Product.FileName;
}

<div>
    <h1 class="md-3">
        @Html.DisplayFor(model => model.Product.ProductName)
    </h1>

    <img src="@imagePath" class="img-fluid img-thumbnail small-image" alt="Image of media to delete" />

    <h2>Are you sure you want to delete this item?</h2>

    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
