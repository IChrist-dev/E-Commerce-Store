@page
@model INET_2005_Final_Project.Pages.CheckoutModel
@{
}

<h1>Checkout</h1>

<div class="row">
    <form method="post">
        <div class="col-md-4">

            <div class="mb-3">
                <label asp-for="@Model.name" class="control-label">Name</label>
                <input asp-for="@Model.name" class="form-control" />
                <span asp-validation-for="@Model.name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.address" class="control-label">Address</label>
                <input asp-for="@Model.address" class="form-control" />
                <span asp-validation-for="@Model.address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.city" class="control-label">City</label>
                <input asp-for="@Model.city" class="form-control" />
                <span asp-validation-for="@Model.city" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.province" class="control-label">Province</label>
                <input asp-for="@Model.province" class="form-control" />
                <span asp-validation-for="@Model.province" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.postalCode" class="control-label">Postal Code</label>
                <input asp-for="@Model.postalCode" class="form-control" />
                <span asp-validation-for="@Model.postalCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.country" class="control-label">Country</label>
                <input asp-for="@Model.country" class="form-control" />
                <span asp-validation-for="@Model.country" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ccNumber" class="control-label">Credit Card</label>
                <input asp-for="@Model.ccNumber" class="form-control" />
                <span asp-validation-for="@Model.ccNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ccExpiryDate" class="control-label">Credit Card Expiration</label>
                <input asp-for="@Model.ccExpiryDate" class="form-control" />
                <span asp-validation-for="@Model.ccExpiryDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.cvv" class="control-label">CVV</label>
                <input asp-for="@Model.cvv" class="form-control" />
                <span asp-validation-for="@Model.cvv" class="text-danger"></span>
            </div>

            <div class="details-btns text-center">
                <input type="submit" value="Place Order" class="btn palette-yellow" />
                <a asp-page="./Index" class="btn btn-dark">Return to Cart</a>
            </div>
        </div>
    </form>
</div>
